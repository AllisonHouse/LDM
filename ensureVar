LDMHOME=${1?LDM home directory not set}

DATA_DIR=$LDMHOME/var/data
QUEUE_DIR=$LDMHOME/var/queues
LOGS_DIR=$LDMHOME/var/logs

if test -e $LDMHOME/data; then
    test -e $DATA_DIR || ln -s $LDMHOME/data $DATA_DIR
    test -e $QUEUE_DIR || ln -s $LDMHOME/data $QUEUE_DIR
else
    test -e $QUEUE_DIR || mkdir -p $QUEUE_DIR
    test -e $DATA_DIR || mkdir -p $DATA_DIR
    ln -s $DATA_DIR $LDMHOME/data
fi

if test -e $LDMHOME/logs; then
    test -e $LOGS_DIR || ln -s $LDMHOME/logs $LOGS_DIR
else
    test -e $LOGS_DIR || mkdir -p $LOGS_DIR
    ln -s $LOGS_DIR $LDMHOME/logs
fi
